<idea-plugin>
  <id>org.magpiebridge.intellij</id>
  <name>LSP Support</name>
  <version>1.0</version>
  <vendor email="juliandolby@gmail.com" url="http://www.yourcompany.com">YourCompany</vendor>

  <description><![CDATA[
      Support for LSP, created for Magpie Bridge.
    ]]></description>

  <change-notes><![CDATA[
      Initial focus on diagnostics and fixes, as that is what the first study needs.
    ]]>
  </change-notes>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
  <idea-version since-build="173.0"/>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
       on how to target different products -->
  <depends>com.intellij.modules.lang</depends>

  <extensions defaultExtensionNs="com.intellij">
    <projectConfigurable instance="org.magpiebridge.intellij.plugin.Configuration"></projectConfigurable>
    <intentionAction>
      <className>org.magpiebridge.intellij.plugin.QuickFixes</className>
      <category>SDK Intentions</category>
    </intentionAction>
   </extensions>

  <project-components>
    <component>
      <implementation-class>org.magpiebridge.intellij.plugin.QuickFixes</implementation-class>
    </component>
    <component>
      <implementation-class>org.magpiebridge.intellij.plugin.Trigger</implementation-class>
    </component>
  </project-components>

  <actions>
    <!-- Add your actions here -->
    <group id="magpiebridge.intellij.tests.Tests" text="Tests for LSP support" popup="true">
      <add-to-group group-id="ToolsMenu" anchor="last"/>
      <action id="TestMessages" class="org.magpiebridge.intellij.test.TestMessages" text="TestMessages"
              description="Simple test of messages for LSP">
      <add-to-group group-id="magpiebridge.intellij.tests.Tests" anchor="last"/>
     </action>
    </group>
    <action id="TestDiagnostic" class="org.magpiebridge.intellij.test.TestDiagnostic" text="TestDiagnostic"
            description="Trivia; test of diagnostics for LSP support">
      <add-to-group group-id="magpiebridge.intellij.tests.Tests" anchor="first"/>
    </action>
    <action id="TestApplyEdit" class="org.magpiebridge.intellij.test.TestApplyEdit" text="TestApplyEdit"
            description="Test applyEdit">
      <add-to-group group-id="magpiebridge.intellij.tests.Tests" anchor="last"/>
    </action>
    <action id="TestServer" class="org.magpiebridge.intellij.test.TestServer" text="TestServer"
            description="Test Server">
      <add-to-group group-id="magpiebridge.intellij.tests.Tests" anchor="last"/>
    </action>
    <action id="TestProblemView" class="org.magpiebridge.intellij.test.TestProblemView" text="TestProblemView"
            description="Test ProblemView">
      <add-to-group group-id="magpiebridge.intellij.tests.Tests" anchor="last"/>
    </action>
    <action id="TestQuickFix" class="org.magpiebridge.intellij.test.TestQuickFix" text="TestQuickFix"
            description="Test QuickFix">
      <add-to-group group-id="magpiebridge.intellij.tests.Tests" anchor="last"/>
    </action>
      <action id="TestRemoteServer" class="org.magpiebridge.intellij.test.TestRemoteServer" text="TestRemoteServer"
              description="Test remote server">
          <add-to-group group-id="magpiebridge.intellij.tests.Tests" anchor="first"/>
      </action>
    <action id="TestConfiguredServer" class="org.magpiebridge.intellij.test.TestConfiguredServer"
            text="TestConfiguredServer" description="Test Configured Server">
      <add-to-group group-id="magpiebridge.intellij.tests.Tests" anchor="first"/>
    </action>
  </actions>

</idea-plugin>